{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "noEmit": true,
    "outDir": "build/dist",
    "rootDir": "./src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "exclude": ["build", "node_modules", "coverage", "**/*.js"],
  "rules": {
    "no-console": [true, "log", "warning"]
  },
  "include": ["src"]
}
