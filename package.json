{
  "name": "4h-military-partnership-cms",
  "version": "0.0.0",
  "private": false,
  "dependencies": {
    "@reach/router": "^1.2.1",
    "axios": "^0.18.0",
    "connect-redis": "^3.4.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.0",
    "helmet": "^3.15.0",
    "html-react-parser": "^0.6.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.16",
    "mongoose-unique-validator": "^2.0.2",
    "passport": "^0.4.0",
    "pm2": "^3.2.4",
    "react": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "react-scripts": "^2.1.2",
    "react-spring": "^7.2.7",
    "slugify": "^1.3.4",
    "styled-components": "^4.1.3",
    "validator": "^10.9.0"
  },
  "scripts": {
    "start": "concurrently -k -p \"[{name}]\" -n \"Client,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:client:start\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "build": "concurrently \"npm:client:build\" \"npm:server:build\"",
    "coverage": "concurrently \"npm:client:coverage\" \"npm:server:coverage\"",
    "production": "pm2-runtime server/dist/start.js",
    "client:start": "cd client && react-scripts start",
    "client:build": "cd client && react-scripts build",
    "client:test": "cd client && react-scripts test",
    "client:coverage": "cd client && react-scripts test --coverage",
    "server:test": "cd server/src && jest --watch --silent",
    "server:coverage": "cd server/src && jest --coverage --silent",
    "server:start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "server:watch:node": "cd server && nodemon --watch dist dist/start.js",
    "server:watch:ts": "cd server && tsc -w",
    "server:build": "cd server && tsc"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/connect-redis": "0.0.8",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/faker": "^4.1.4",
    "@types/helmet": "0.0.42",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.119",
    "@types/mongodb": "^3.1.17",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.3.4",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/node": "^10.12.18",
    "@types/nodemailer": "^4.6.5",
    "@types/passport": "^0.4.7",
    "@types/reach__router": "^1.2.0",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/styled-components": "^4.1.4",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^9.4.3",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.0",
    "faker": "^4.1.0",
    "jest": "^23.6.0",
    "mongodb-memory-server": "^2.8.0",
    "react-app-polyfill": "^0.2.0",
    "react-testing-library": "^5.4.2",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  }
}
