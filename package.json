{
  "name": "4h-military-partnership-cms",
  "version": "0.0.0",
  "private": false,
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@types/bcryptjs": "^2.4.2",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^3.4.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "express-jwt-permissions": "^1.2.3",
    "helmet": "^3.15.0",
    "html-react-parser": "^0.6.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.5",
    "mongoose-unique-validator": "^2.0.2",
    "nodemailer": "^5.1.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pm2": "^3.2.9",
    "react": "16.8.0-alpha.1",
    "react-dom": "16.8.0-alpha.1",
    "react-scripts": "^2.1.2",
    "react-spring": "^7.2.9",
    "slugify": "^1.3.4",
    "styled-components": "^4.1.3",
    "validator": "^10.11.0"
  },
  "scripts": {
    "start": "concurrently -k -p \"[{name}]\" -n \"Client,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:client:start\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "build": "concurrently \"npm:client:build\" \"npm:server:build\"",
    "coverage": "concurrently \"npm:client:coverage\" \"npm:server:coverage\"",
    "production": "pm2-runtime server/dist/start.js",
    "lint": "concurrently \"prettier --write **/*.{js,ts,tsx,scss,html,json}\" \"tslint --fix -p ./client/tsconfig.json\" \"tslint --fix -p ./server/tsconfig.json\"",
    "client:start": "cd client && react-scripts start",
    "client:build": "cd client && react-scripts build",
    "client:test": "cd client && react-scripts test",
    "client:coverage": "cd client && react-scripts test --coverage",
    "server:test": "cd server/src && jest --watch --silent",
    "server:coverage": "cd server/src && jest --coverage --silent",
    "server:start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "server:watch:node": "cd server && nodemon --watch dist dist/start.js",
    "server:watch:ts": "cd server && tsc -w",
    "server:build": "cd server && tsc"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/connect-redis": "0.0.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.41",
    "@types/faker": "^4.1.5",
    "@types/helmet": "0.0.42",
    "@types/jest": "^23.3.13",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.120",
    "@types/mongodb": "^3.1.19",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.3.8",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/node": "^10.12.18",
    "@types/nodemailer": "^4.6.5",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/reach__router": "^1.2.3",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "@types/styled-components": "^4.1.6",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^10.9.0",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.0",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "mongodb-memory-server": "^3.0.0",
    "react-app-polyfill": "^0.2.0",
    "react-testing-library": "^5.4.2",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.2",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run coverage"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,scss,html,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  }
}
