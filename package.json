{
  "name": "4h-military-partnership-cms",
  "version": "0.0.0",
  "private": false,
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^33.0.0",
    "@ckeditor/ckeditor5-react": "^4.0.1",
    "@reach/router": "^1.3.3",
    "@sentry/browser": "^6.19.3",
    "@sentry/node": "^6.19.3",
    "aws-api-gateway-client": "^0.3.3",
    "aws-sdk": "^2.1106.0",
    "axios": "^0.26.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "downshift": "^6.1.7",
    "express": "^4.17.3",
    "express-jwt": "^6.1.1",
    "express-jwt-permissions": "^1.3.6",
    "helmet": "^5.0.2",
    "html-react-parser": "^1.4.10",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^6.4.6",
    "mongoose-unique-validator": "^3.0.0",
    "nodemailer": "^6.7.3",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "pm2": "^5.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.0",
    "slugify": "^1.6.5",
    "styled-components": "^5.3.5",
    "universal-cookie": "^4.0.4",
    "validator": "^13.7.0"
  },
  "scripts": {
    "start": "concurrently -k -p \"[{name}]\" -n \"Client,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:client:start\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "build": "npm run client:build && npm run server:build",
    "coverage": "concurrently \"npm:client:coverage\" \"npm:server:coverage\"",
    "production": "pm2-runtime server/dist/start.js",
    "lint": "concurrently \"prettier --write **/*.{js,ts,tsx,scss,html,json}\" \"eslint --fix client/**/*.{js,ts,tsx}\" \"eslint --fix server/**/*.{js,ts,tsx}\"",
    "client:start": "cd client && react-scripts start",
    "client:build": "cd client && react-scripts build",
    "client:test": "cd client && react-scripts test",
    "client:coverage": "cd client && react-scripts test --coverage",
    "server:test": "cd server/src && jest --watch --silent",
    "server:coverage": "cd server/src && jest --coverage --silent",
    "server:start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "server:watch:node": "cd server && nodemon --watch dist dist/start.js",
    "server:watch:ts": "cd server && tsc -w",
    "server:build": "cd server && tsc"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "6.0.4",
    "@types/faker": "^6.6.9",
    "@types/helmet": "4.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.181",
    "@types/mongodb": "^4.0.7",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.11.97",
    "@types/mongoose-unique-validator": "^1.0.5",
    "@types/node": "^17.0.23",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/reach__router": "^1.3.10",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/styled-components": "^5.1.24",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.2",
    "concurrently": "^7.1.0",
    "core-js": "^3.21.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "mongodb-memory-server": "^8.4.2",
    "prettier": "^2.6.2",
    "react-app-polyfill": "^3.0.0",
    "react-testing-library": "^8.0.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,scss,html,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
