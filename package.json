{
  "name": "4h-military-partnership-cms",
  "version": "0.0.0",
  "private": false,
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^12.3.1",
    "@ckeditor/ckeditor5-react": "^1.1.3",
    "@reach/router": "^1.2.1",
    "@sentry/browser": "^5.5.0",
    "@sentry/node": "^5.5.0",
    "aws-sdk": "^2.528.0",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "date-fns": "^1.30.1",
    "dotenv": "^8.0.0",
    "downshift": "^3.2.10",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-jwt-permissions": "^1.3.1",
    "helmet": "^3.19.0",
    "html-react-parser": "^0.9.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.5",
    "mongoose-unique-validator": "^2.0.3",
    "nodemailer": "^6.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pm2": "^3.5.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "react-spring": "^8.0.27",
    "slugify": "^1.3.4",
    "styled-components": "^4.3.2",
    "validator": "^11.1.0"
  },
  "scripts": {
    "start": "concurrently -k -p \"[{name}]\" -n \"Client,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:client:start\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "build": "concurrently \"npm:client:build\" \"npm:server:build\"",
    "coverage": "concurrently \"npm:client:coverage\" \"npm:server:coverage\"",
    "production": "pm2-runtime server/dist/start.js",
    "lint": "concurrently \"prettier --write **/*.{js,ts,tsx,scss,html,json}\" \"eslint --fix client/**/*.{js,ts,tsx}\" \"eslint --fix server/**/*.{js,ts,tsx}\"",
    "client:start": "cd client && react-scripts start",
    "client:build": "cd client && react-scripts build",
    "client:test": "cd client && react-scripts test",
    "client:coverage": "cd client && react-scripts test --coverage",
    "server:test": "cd server/src && jest --watch --silent",
    "server:coverage": "cd server/src && jest --coverage --silent",
    "server:start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "server:watch:node": "cd server && nodemon --watch dist dist/start.js",
    "server:watch:ts": "cd server && tsc -w",
    "server:build": "cd server && tsc"
  },
  "devDependencies": {
    "@babel/runtime": "^7.5.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-jwt": "0.0.42",
    "@types/faker": "^4.1.5",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.136",
    "@types/mongodb": "^3.1.28",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.5.9",
    "@types/mongoose-unique-validator": "^1.0.2",
    "@types/node": "^12.6.8",
    "@types/nodemailer": "^6.2.0",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/reach__router": "^1.2.4",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^4.1.18",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^10.11.1",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.1",
    "faker": "^4.1.0",
    "husky": "^3.0.1",
    "jest": "^24.7.1",
    "lint-staged": "^9.2.0",
    "mongodb-memory-server": "^5.1.5",
    "prettier": "^1.18.2",
    "react-app-polyfill": "^1.0.1",
    "react-testing-library": "^8.0.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,scss,html,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
