{
  "name": "4h-military-partnership-cms",
  "version": "0.0.0",
  "private": false,
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^18.0.0",
    "@ckeditor/ckeditor5-react": "^2.1.0",
    "@reach/router": "^1.3.3",
    "@sentry/browser": "^5.15.4",
    "@sentry/node": "^5.15.4",
    "aws-api-gateway-client": "^0.3.3",
    "aws-sdk": "^2.651.0",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "date-fns": "^2.11.1",
    "dotenv": "^8.2.0",
    "downshift": "^5.0.5",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-jwt-permissions": "^1.3.3",
    "helmet": "^3.22.0",
    "html-react-parser": "^0.10.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.7",
    "mongoose-unique-validator": "^2.0.3",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pm2": "^4.2.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "react-spring": "^8.0.27",
    "slugify": "^1.4.0",
    "styled-components": "^5.0.1",
    "validator": "^13.0.0"
  },
  "scripts": {
    "start": "concurrently -k -p \"[{name}]\" -n \"Client,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:client:start\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "build": "npm run client:build && npm run server:build",
    "coverage": "concurrently \"npm:client:coverage\" \"npm:server:coverage\"",
    "production": "pm2-runtime server/dist/start.js",
    "lint": "concurrently \"prettier --write **/*.{js,ts,tsx,scss,html,json}\" \"eslint --fix client/**/*.{js,ts,tsx}\" \"eslint --fix server/**/*.{js,ts,tsx}\"",
    "client:start": "cd client && react-scripts start",
    "client:build": "cd client && react-scripts build",
    "client:test": "cd client && react-scripts test",
    "client:coverage": "cd client && react-scripts test --coverage",
    "server:test": "cd server/src && jest --watch --silent",
    "server:coverage": "cd server/src && jest --coverage --silent",
    "server:start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm:server:watch:ts\" \"npm:server:watch:node\"",
    "server:watch:node": "cd server && nodemon --watch dist dist/start.js",
    "server:watch:ts": "cd server && tsc -w",
    "server:build": "cd server && tsc"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-jwt": "0.0.42",
    "@types/faker": "^4.1.5",
    "@types/helmet": "0.0.44",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/lodash": "^4.14.141",
    "@types/mongodb": "^3.3.3",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.5.18",
    "@types/mongoose-unique-validator": "^1.0.2",
    "@types/node": "^12.7.8",
    "@types/nodemailer": "^6.2.1",
    "@types/passport": "^1.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/reach__router": "^1.2.5",
    "@types/react": "^16.9.3",
    "@types/react-dom": "^16.9.1",
    "@types/styled-components": "^4.1.19",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^10.11.3",
    "concurrently": "^4.1.2",
    "core-js": "^3.2.1",
    "faker": "^4.1.0",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.0",
    "mongodb-memory-server": "^5.2.5",
    "prettier": "^1.18.2",
    "react-app-polyfill": "^1.0.3",
    "react-testing-library": "^8.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,scss,html,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
